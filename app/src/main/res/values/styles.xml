<resources>

    <!-- Base application theme. -->
    <style name="IntroTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#00ffffff</item>
        <item name="colorPrimaryDark">#00ffffff</item>
        <item name="colorAccent">#00ffffff</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@drawable/intro_wallpaper</item>
    </style>

    <!-- Switch theme -->
    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#03b55a</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#FFFFFF</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#767676</item>
    </style>

</resources>
